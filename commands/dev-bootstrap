if [ ! -d "siralim-ultimate-api" ] ; then
    git clone git@github.com:rovermicrover/siralim-ultimate-api.git
fi
if [ ! -d "siralim-ultimate-nginx" ] ; then
    git clone git@github.com:rovermicrover/siralim-ultimate-nginx.git
fi
if [ ! -d "siralim-ultimate-ui" ] ; then
    git clone git@github.com:rovermicrover/siralim-ultimate-ui.git
fi

docker-compose build
docker-compose up -d --remove-orphans postgres
./commands/api/migrate
./commands/api/import
./commands/dev